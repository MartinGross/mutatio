<p id="notice"><%= notice %></p>

<h3>
  <%= @user.name %>
</h3>

<p>
  <%= @user.email %>
</p>

<div class="row">

    <div class="col-md-5">
        <ul class="list-group">
            <% @user.changes.each do |updated_change| %>

                <%= link_to(updated_change, class: 'list-group-item')  do %>
                    <b>CR<%= updated_change.number %></b> - <%= updated_change.short_description %>
                    <br> <i><%= updated_change.change_status.try(:status) %></i>
                    <br><small class="text-muted"> updated <%= time_ago_in_words(updated_change.updated_at) %> ago</small>
                <% end %>

            <% end %>
        </ul>
    </div>

</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
